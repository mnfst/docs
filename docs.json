{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Manifest",
  "theme": "maple",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://manifest.build"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#0891b2",
    "light": "#22d3ee",
    "dark": "#164e63"
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "light": "#fcfaf5",
      "dark": "#171717"
    }
  },
  "fonts": {
    "heading": {
      "family": "Bricolage Grotesque",
      "weight": 700
    },
    "body": {
      "family": "DM Sans",
      "weight": 400
    }
  },
  "icons": {
    "library": "lucide"
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": {
      "theme": {
        "light": "github-light",
        "dark": "github-dark"
      }
    }
  },
  "search": {
    "prompt": "Search Manifest docs..."
  },
  "navbar": {
    "links": [
      {
        "type": "github",
        "href": "https://github.com/mnfst/manifest"
      },
      {
        "type": "discord",
        "href": "https://discord.gg/FepAked3W7"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.manifest.build"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "install",
              "cloud-vs-local"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "track-usage",
              "set-limits",
              "routing"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "configuration",
              "contributing"
            ]
          },
          {
            "group": "Links",
            "pages": [
              {
                "title": "Homepage",
                "icon": "globe",
                "url": "https://manifest.build"
              }
            ]
          }
        ]
      }
    ],
    "global": {}
  },
  "footer": {
    "socials": {
      "github": "https://github.com/mnfst/manifest",
      "discord": "https://discord.gg/FepAked3W7"
    },
    "links": [
      {
        "header": "Product",
        "items": [
          { "label": "Dashboard", "href": "https://app.manifest.build" },
          { "label": "Routing", "href": "/routing" }
        ]
      },
      {
        "header": "Community",
        "items": [
          { "label": "GitHub", "href": "https://github.com/mnfst/manifest" },
          { "label": "Discord", "href": "https://discord.gg/FepAked3W7" },
          { "label": "Contributing", "href": "/contributing" }
        ]
      }
    ]
  }
}
